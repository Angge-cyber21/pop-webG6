    <script>
        document.getElementById('add-table').addEventListener('click', function () {
            const locationOptions = document.getElementById('location-options');
            const tableOptions = locationOptions.getElementsByClassName('table-option');
            const lastTableOption = tableOptions[tableOptions.length - 1];
            const newTableOption = lastTableOption.cloneNode(true);

            // Update the button text and aria-labels for the new table option
            const newIndex = tableOptions.length + 1;
            const button = newTableOption.querySelector('button');
            button.textContent = 'Table ' + newIndex;

            const inputs = newTableOption.querySelectorAll('input');
            inputs.forEach(input => {
                if (input.type === 'date') {
                    input.value = '';
                    input.setAttribute('aria-label', 'Select date for Table ' + newIndex);
                } else if (input.type === 'time') {
                    input.value = '';
                    input.setAttribute('aria-label', 'Select time for Table ' + newIndex);
                }
            });

            const selects = newTableOption.querySelectorAll('select');
            selects.forEach(select => {
                select.selectedIndex = 0;
                if (select.getAttribute('aria-label').includes('Number of people')) {
                    select.setAttribute('aria-label', 'Number of people for Table ' + newIndex);
                } else if (select.getAttribute('aria-label').includes('Select location')) {
                    select.setAttribute('aria-label', 'Select location for Table ' + newIndex);
                }
            });

            locationOptions.insertBefore(newTableOption, document.getElementById('add-table'));
        });
    </script>
